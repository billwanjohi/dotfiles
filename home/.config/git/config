[alias]
	glog = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
	# https://github.com/so-fancy/diff-so-fancy/blob/master/pro-tips.md#raw-patches
	patch = !git --no-pager diff --no-color
	stash-all = stash save --include-untracked
	undo = reset --soft HEAD^

[color]
	ui = always

[commit]
	#gpgSign = true

[core]
	# https://github.com/so-fancy/diff-so-fancy#usage
	pager = diff-so-fancy | less --tabs=4 -RFX

[credential]
	helper = osxkeychain

[diff]
	colorMoved = dimmed_zebra

[include]
	path = user  # this lets us set user variables in separate file

[init]
	templateDir = ~/.config/git/template

[magithub]
	online = false

[magithub "status"]
	includeStatusHeader = false
	includePullRequestsSection = false
	includeIssuesSection = false

[merge]
	conflictstyle = diff3

[pager]
  # https://github.com/so-fancy/diff-so-fancy/blob/master/pro-tips.md#moving-around-in-the-diff
  diff = diff-so-fancy | less --tabs=4 -RFX --pattern '^(Date|added|deleted|modified): '

[push]
	default = simple
	followTags = true

[status]
	showUntrackedFiles = all

[transfer]
	fsckobjects = true

[pull]
	rebase = true

[url "git@github.com:"]
	insteadOf = https://github.com/
[diff "sopsdiffer"]
	textconv = sops -d
