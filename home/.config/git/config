[include]
	path = user  # this lets us set user variables in separate file

[init]
	templateDir = ~/.config/git/template

[merge]
	conflictstyle = diff3

[push]
	default = simple
	followTags = true

[status]
	showUntrackedFiles = all

[transfer]
	fsckobjects = true

[url "git@github.com:"]
	insteadOf = https://github.com/
