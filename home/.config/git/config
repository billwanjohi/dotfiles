[alias]
	patch = !git --no-pager diff --no-color

[color]
	ui = auto

[core]
	pager = delta

[delta]
	side-by-side = false

[init]
	templateDir = ~/.config/git/template

[include]
	path = user  # this lets us set user variables in separate file

[pull]
	rebase = true

[url "git@github.com:"]
	insteadOf = https://github.com/
