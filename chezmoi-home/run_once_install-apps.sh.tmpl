#!/usr/bin/env bash

set -Eeuxo pipefail

{{ if eq .chezmoi.os "darwin" -}}
# TODO: move this installation into an earlier run-once script
if ! [ -x "$(command -v brew)" ]
then
    sudo chown "$(whoami)":admin \
        /usr/local/share/zsh \
        /usr/local/share/zsh/site-functions

    /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
fi

# TODO: switch to brew bundle
# https://www.chezmoi.io/user-guide/machines/macos/#use-brew-bundle-to-manage-your-brews-and-casks

# TODO: use mac-app-store where appropriate
casks=(
  alacritty
  amethyst
  aws-vault
  docker
  firefox
  google-chrome
  jetbrains-toolbox
  meetingbar
  microsoft-teams
  pomotroid
  temurin
  vscodium
  zoom
)

brew install --cask --no-quarantine ${casks[*]}

non_casks=(
    adr-tools
    awscli
    bat
    bottom
    coreutils
    defaultbrowser
    editorconfig
    fzf
    git
    git-lfs
    gnupg
    graphviz
    httpie
    lazydocker
    lazygit
    neofetch  # beautiful system deets
    node@16
    onefetch  # beautiful repo deets
    pandoc
    prettier
    shellcheck
    shfmt
    sqlfluff
    tealdeer
    tig
    tmux
    xsv
)

brew install ${non_casks[*]}

$(brew --prefix)/opt/fzf/install

defaultbrowser firefox
{{- else -}}
yay --sync --needed \
    bat \
    tldr
{{- end }}
