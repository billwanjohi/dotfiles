# this needs to be rubified, or evaluated with homeshick

#osx
ruby -e "$(curl -fsSL https://raw.github.com/mxcl/homebrew/go)"

brew install ack
brew install autoconf
brew install coreutils # gnu > bsd
brew install git
brew install macvim # requires full x-code
brew install postgresql # active_record dependency
brew install python
brew install readline # irb needs this
brew install sqlite
brew install tig
brew install tmux
brew install tree
brew install wget
brew install zsh
brew install go --with-cgo

brew install brew-cask

brew cask install adium # jabber client
brew cask install avidemux
brew cask install caffeine # keep screen on
brew cask install crashplan # backup
brew cask install dbeaver
brew cask install evernote
brew cask install f-lux # adjust color temp by time
brew cask install --appdir="/Applications" firefox
brew cask install google-chrome
brew cask install google-hangouts
brew cask install handbrake
brew cask install hip-chat
brew cask install keyremap4macbook
brew cask install kindle
brew cask install pc-keyboardhack
brew cask install quassel-client # irc
